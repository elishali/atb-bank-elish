                <input type="text" placeholder="ad, soyad">
            </div>
            <div class="col-lg-6">
                <input type="text" placeholder="fin kod">
            </div>
        </div>

        <input type="tel" placeholder="telefon">

        <hr>

        <div class="deposit_main" id="deposit_main">
            <div class=" deposit">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-lg-6">
                                <select>
                                    <option value="valyuta">valyuta</option>
                                    <option value="AZN">AZN</option>
                                    <option value="USD">USD</option>
                                </select>
                            </div>
                            <div class="col-lg-6">
                                <select>
                                    <option value="faizlərin ödənilməsi">
                                        faizlərin ödənilməsi
                                    </option>
                                    <option value="müddətin sonunda">müddətin sonunda</option>
                                    <option value="aylıq ödəniş">aylıq ödəniş</option>
