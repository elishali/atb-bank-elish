                                    <option value="24">24</option>
                                    <option value="36">36</option>
                                </select>
                            </div>
                            <div class="col-lg-6">
                                <input type="text"
                                       placeholder="məbləğ (min. 1000 AZN/USD)*" />
                            </div>
                        </div>
